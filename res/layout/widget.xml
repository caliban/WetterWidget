<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout01" android:layout_height="150dp"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"
	android:layout_width="320dp" android:orientation="vertical"
	android:background="@android:color/background_dark">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/LinearLayout02" android:layout_height="60dp"
		android:layout_width="320dp" android:orientation="horizontal">
		<TextView 
			android:layout_marginTop="20dp"
			android:layout_marginLeft="10dp"
			android:textSize="30dp"
			android:textStyle="bold"
		 	android:layout_height="50dp"
		 	android:id="@+id/zip"
		 	android:layout_width="160dp" 
		 	android:text="@string/zip"/>

		<TextView 
			android:layout_marginTop="20dp"
			android:textSize="30dp"
			android:textStyle="bold"
			android:id="@+id/place" 
			android:text="@string/place"
			android:layout_height="50dp" 
			android:layout_width="200dp"
			/>

	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/LinearLayout03" android:layout_height="30dp"
		android:layout_width="320dp" android:orientation="horizontal">
		<TextView 
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:textSize="12dp"
		 	android:layout_height="20dp"
		 	android:id="@+id/date1"
		 	android:layout_width="60dp" />

		<TextView 
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:textSize="12dp"
		 	android:layout_height="20dp"
		 	android:id="@+id/date2"
		 	android:layout_width="60dp" 
			/>
			<TextView 
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:textSize="12dp"
		 	android:layout_height="20dp"
		 	android:id="@+id/date3"
		 	android:layout_width="60dp" 
/>

		<TextView 
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:textSize="12dp"
		 	android:layout_height="20dp"
		 	android:id="@+id/date4"
		 	android:layout_width="60dp" />
			/>
			<TextView 
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:textSize="12dp"
		 	android:layout_height="20dp"
		 	android:id="@+id/date5"
		 	android:layout_width="60dp" />
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/LinearLayout04" 
			android:layout_height="70dp"
			android:layout_width="320dp" 
			android:orientation="horizontal">

		<ImageView 
			android:id="@+id/widget_day1" 
			android:src="@drawable/icon"
			android:layout_width="60dp" 
			android:layout_height="60dp"
			android:gravity="center_vertical|center_horizontal" />
		<ImageView android:id="@+id/widget_day2" 
		android:src="@drawable/icon"
			android:layout_width="60dp" 
			android:layout_height="60dp"
			android:gravity="center_vertical|center_horizontal" />
		<ImageView 
		android:layout_marginBottom="5dp"
		android:id="@+id/widget_day3" 
		android:src="@drawable/icon"
			android:layout_width="60dp" 
			android:layout_height="60dp"
			android:gravity="center_vertical|center_horizontal" />
		<ImageView 
		android:id="@+id/widget_day4" 
		android:src="@drawable/icon"
			android:layout_width="60dp" 
			android:layout_height="60dp"
			android:gravity="center_vertical|center_horizontal" />
		<ImageView android:id="@+id/widget_day5" android:src="@drawable/icon"
			android:layout_width="60dp" android:layout_height="60dp"
			android:gravity="center_vertical|center_horizontal" />


	</LinearLayout>
</LinearLayout>